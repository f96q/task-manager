.page-header
  %h1 projects

.mb10
  =link_to new_project_path, class: 'btn btn-primary' do
    %i.fa.fa-plus

.panel.panel-default
  %table.table
    %thead
    %tr
      %th title
      %th
    %tbody
    - @projects.each do |project|
      %tr
        %td= link_to project.title, project_tasks_path(project)
        %td
          = link_to edit_project_path(project) do
            %i.fa.fa-lg.fa-edit
          = link_to project_path(project), method: :delete, data: {confirm: 'are you sure?'} do
            %i.fa.fa-lg.fa-trash

.text-center
  = paginate @projects, theme: 'bootstrap'
