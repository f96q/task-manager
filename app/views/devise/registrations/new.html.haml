.page-header
  %h1 Sign up

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f|
  = devise_error_messages!
  .form-group
    %label.col-sm-2.control-label{for: "#{resource_name}_email"} Email
    .col-sm-10
      = f.text_field :email, class: 'form-control', autofocus: true

  .form-group
    %label.col-sm-2.control-label{for: "#{resource_name}_password"} Password
    .col-sm-10
      = f.password_field :password, class: 'form-control', autocomplete: 'off'

  .form-group
    %label.col-sm-2.control-label{for: "#{resource_name}_password_confirmation"} Password Confirmation
    .col-sm-10
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'

  .form-group
    .col-sm-offset-2.col-sm-10
      %button.btn.btn-default{type: 'submit'} Sign up

= render "devise/shared/links"
