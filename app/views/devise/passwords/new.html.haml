.page-header
  %h1 Forgot your password?

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal', role: 'form'}) do |f|
  = devise_error_messages!
  .form-group
    %label.col-sm-2.control-label{for: "#{resource_name}_email"} Email
    .col-sm-10
      = f.text_field :email, class: 'form-control', autofocus: true

  .form-group
    .col-sm-offset-2.col-sm-10
      %button.btn.btn-default{type: 'submit'} Send me reset password instructions

= render "devise/shared/links"
