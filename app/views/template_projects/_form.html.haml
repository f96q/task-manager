= form_for @template_project, html: {class: 'form-horizontal', role: 'form'} do |f|
  = render 'error', errors: f.object.errors
  .form-group
    %label.col-sm-2.control-label{for: 'project_title'} title
    .col-sm-10
      = f.text_field :title, class: 'form-control'

  .form-group
    .col-sm-offset-2.col-sm-10
      %button.btn.btn-default{type: 'submit'} save
